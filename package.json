{
  "name": "wsrun",
  "version": "1.7.0",
  "description": "executes commands on packages in parallel, but is aware of the dependencies between them",
  "main": "./build/index.js",
  "author": "Andrej T.",
  "license": "MIT",
  "repository": "github:whoeverest/wsrun",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "bin": {
    "wsrun": "./build/index.js"
  },
  "files": [
    "build/"
  ],
  "devDependencies": {
    "@types/bluebird": "^3.5.18",
    "@types/glob": "^5.0.33",
    "@types/jest": "^21.1.6",
    "@types/lodash": "^4.14.85",
    "@types/node": "^8.0.53",
    "@types/split": "^0.3.28",
    "@types/yargs": "^8.0.2",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.3",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "bluebird": "^3.5.1",
    "chalk": "^2.3.0",
    "glob": "^7.1.2",
    "lodash": "^4.17.4",
    "split": "^1.0.1",
    "throat": "^4.1.0",
    "yargs": "^10.0.3"
  }
}
